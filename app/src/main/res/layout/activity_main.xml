<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gdrom.wishlist.MainActivity">


    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"


        >

        <EditText
            android:id="@+id/titleStatus"
            android:layout_width="500px"
            android:layout_height="150px"

            android:ems="10"
            android:inputType="textPersonName"
            android:text="TITLE"
            android:layout_alignBaseline="@+id/editstatus"
            android:layout_alignBottom="@+id/editstatus"
            android:layout_toRightOf="@+id/editstatus"
            android:layout_toEndOf="@+id/editstatus" />

        <Button
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:onClick="addWishList"
            android:text="ADD"
            android:layout_below="@+id/search"
            android:layout_toRightOf="@+id/detail"
            android:layout_toEndOf="@+id/detail" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="500px"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name" />

        <Button
            android:id="@+id/editstatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EDITSTATUS"
            android:layout_below="@+id/detail"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="changeStatus"
            />

        <Button
            android:id="@+id/search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/add"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/add"
            android:text="SEARCH"
            android:onClick="searchWishList"
            />

        <EditText
            android:id="@+id/title"
            android:layout_width="200px"
            android:layout_height="150px"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/add"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="TITLE" />


        <EditText
            android:id="@+id/detail"
            android:layout_width="600px"
            android:layout_height="150px"


            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/add"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="DETAIL" />

        <EditText
            android:id="@+id/cost"
            android:layout_width="200px"
            android:layout_height="150px"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="COST"
            android:layout_alignBaseline="@+id/add"
            android:layout_alignBottom="@+id/add"
            android:layout_toRightOf="@+id/editstatus"
            android:layout_toEndOf="@+id/editstatus" />

        <ListView
            android:id="@+id/listview"
            android:layout_width="1000px"
            android:layout_height="500px"
            tools:layout_editor_absoluteX="190dp"
            tools:layout_editor_absoluteY="479dp"
            android:layout_below="@+id/titleStatus"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
